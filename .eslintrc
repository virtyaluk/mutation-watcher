{
	"parser": "esprima",
	"globals": {
      "define": true,
      "module": true,
      "describe": true,
      "it": true,
      "require": true,
      "requirejs": true,
      "beforeEach": true,
      "expect": true,
      "before": true,
      "after": true,
      "afterEach": true
	},
	"rules": {
        "comma-dangle": [2, "never"],
        "no-cond-assign": [2, "except-parens"],
        "no-console": 1,
        "no-constant-condition": 2,
        "no-debugger": 1,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty-character-class": 1,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 1,
        "no-extra-parens": 1,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 1,
        "no-obj-calls": 1,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 1,
        "valid-typeof": 2,
        "no-unexpected-multiline": 1,

        "accessor-pairs": [1, {"getWithoutSet": true}],
        "block-scoped-var": 2,
        "complexity": [1, 15],
        "consistent-return": 2,
        "curly": [2, "all"],
        "default-case": 1,
        "dot-notation": 1,
        "eqeqeq": [2, "smart"],
        "guard-for-in": 1,
        "no-alert": 2,
        "no-caller": 2,
        "no-else-return": 1,
        "no-empty-label": 2,
        "no-eq-null": 2,
        "no-extend-native": [2, {"exceptions": ["Array"]}],
        "no-extra-bind": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-iterator": 1,
        "no-labels": 1,
        "no-lone-blocks": 2,
        "no-loop-func": 1,
        "no-multi-spaces": 2,
        "no-multi-str": 1,
        "no-native-reassign": 2,
        "no-new-func": 0,
        "no-new-wrappers": 2,
        "no-new": 1,
        "no-octal-escape": 1,
        "no-octal": 1,
        "no-param-reassign": 1,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 1,
        "no-self-compare": 2,
        "no-sequences": 1,
        "no-throw-literal": 1,
        "no-unused-expressions": 2,
        "no-void": 2,
        "no-warning-comments": [1, { "terms": ["todo", "fixme"], "location": "anywhere" }],
        "no-with": 2,
        "radix": 2,
        "vars-on-top": 2,
        "wrap-iife": [2, "any"],
        "yoda": [1, "never"],

        "strict": [2, "function"],

        "no-catch-shadow": 0,
        "no-delete-var": 2,
        "no-label-var": 1,
        "no-shadow-restricted-names": 2,
        "no-shadow": 1,
        "no-undef-init": 1,
        "no-undef": 2,
        "no-undefined": 1,
        "no-unused-vars": 2,
        "no-use-before-define": [2, "nofunc"],

        "no-new-require": 2,

		"brace-style": [2, "1tbs", { "allowSingleLine": true}],
		"camelcase": [1, {"properties": "always"}],
		"comma-spacing": [2, {"before": false, "after": true}],
		"computed-property-spacing": [2, "never"],
		"consistent-this": [2, "that"],
		"func-names": 0,
		"func-style": [2, "expression"],
		"indent": [2],
		"key-spacing": [2, { "beforeColon": false, "afterColon": true}],
		"max-nested-callbacks": [2, 5],
		"new-cap": [1, {"newIsCap": true, "capIsNew": true}],
        "new-parens": 2,
        "newline-after-var": [2, "always"],
        "no-lonely-if": 2,
        "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
        "no-multiple-empty-lines": [2, {"max": 2}],
        "no-nested-ternary": 0,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-ternary": 0,
        "no-trailing-spaces": 1,
        "no-underscore-dangle": 0,
        "object-curly-spacing": [2, "always"],
        "one-var": [2, "always"],
        "operator-assignment": [2, "always"],
        "operator-linebreak": [2, "after"],
        "padded-blocks": [2, "never"],
        "quote-props": [2, "as-needed"],
		"quotes": [2, "single", "avoid-escape"],
        "semi-spacing": [2, {"before": false, "after": true}],
        "semi": [2, "always"],
        "sort-vars": [0, { "ignoreCase": true }],
        "space-after-keywords": [2, "always"],
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "space-in-parens": [2, "never"],
        "space-infix-ops": [2, {"int32Hint": false}],
        "space-return-throw-case": 2,
        "space-unary-ops": [1, { "words": true, "nonwords": false }],

        "max-depth": [2, 5],
        "max-len": [2, 160, 4],
        "max-params": [1, 7],
        "max-statements": [1, 40],
        "no-bitwise": 0,
        "no-plusplus": 0
	},
	"env": {
		"node": true,
		"browser": true,
		"amd": true
	}
}